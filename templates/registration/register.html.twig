{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}
{% block main %}
    {% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}

    <section id="cover" class="min-vh-100">
        <div id="cover-caption">
            <div class="container">
                <div class="row text-white">
                    <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form p-4">
                        <h1 class="display-4 py-2 text-truncate">INSCRIPTION</h1>
                        <div class="px-2">
                            <div action="" class="justify-content-center">
                                {{ form_start(registrationForm) }}
                                <div>{{ form_row(registrationForm.email) }}</div>
                                <div>{{ form_row(registrationForm.username) }}</div>
                                <div>{{ form_row(registrationForm.plainPassword) }}</div>
                                <div>{{ form_row(registrationForm.agreeTerms) }}</div>

                                <button class="btn btn-secondary btn-lg">S'inscrire</button>
                                {{ form_end(registrationForm) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
